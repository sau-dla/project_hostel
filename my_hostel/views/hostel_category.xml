<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_hostel_category_form" model="ir.ui.view">
            <field name="name">Hostel category form</field>
            <field name="model">hostel.category</field>
            <field name="arch" type="xml">
                <form string="hostel category Information">
                    <sheet>
                        <group>
                            <button name="create_multiple_categories" string="Create Multiple Categories" type="object"/>
                            <button name="create_categories" string="Create Categories" type="object"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="parent_path"/>
                            <field name="parent_id"/>
                            <field name="child_ids"/>  
                            <field name="active"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
</odoo>