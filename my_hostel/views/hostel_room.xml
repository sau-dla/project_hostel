<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_hostel_room_list" model="ir.ui.view">
            <field name="name">Hostel Room form</field>
            <field name="model">hostel.room</field>
            <field name="arch" type="xml">
                <form string="hostel room Information">
                    <group>
                            <button name="make_available" string="mark as available"
                                    type="object"/>
                            <button name="make_closed" string="mark as busy" 
                                    type="object"/>
                            <field name="state" widget="statusbar"/>
                        </group>
                    <sheet>
                        <group>
                            <field name="room_name"/>
                            <field name="room_number"/>
                            <field name="floor_number"/>
                            <field name="currency_id"/>
                            <field name="rent_amount"/>
                            <field name="hostel_id"/>
                            <field name="student_ids"/>
                            <field name="amenity_ids"/>
                            <field name="student_per_room"/>
                            <field name="availability"/>
                            <field name="admission_date"/>
                            <field name="discharge_date"/>
                            <field name="duration"/>
                        </group>
                        <group>
                            <button name="log_all_room_members" string="Registrar Miembros" type="object"/>
                        </group>
                        </sheet>
                </form>
            </field>
        </record>
</odoo>