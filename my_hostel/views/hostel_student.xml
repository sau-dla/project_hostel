<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_hostel_student_list" model="ir.ui.view">
            <field name="name">Hostel student list</field>
            <field name="model">hostel.student</field>
            <field name="arch" type="xml">
                <list>
                        <field name="name"/>
                        <field name="gender"/>
                        <field name="date_of_birth"/>
                        <field name="room_id" />
                        <field name="hostel_id"/>
                        <field name="partner_id"/>
                </list>
            </field>
        </record>

        <record id="view_hostel_student_form" model="ir.ui.view">
            <field name="name">Hostel Student Form</field>
            <field name="model">hostel.student</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_assign_room"  string="Asignar HabitaciÃ³n"   type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="status"></field>
                                <field name="name"/>
                                <field name="gender"/>
                                <field name="date_of_birth"/>
                            </group>
                            <group>
                                <field name="room_id"/>
                                <field name="hostel_id"/>
                                <field name="partner_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
</odoo>